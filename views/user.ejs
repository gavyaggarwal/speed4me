<!DOCTYPE html>
<html>
  <head>
    <title>Speed4me</title>
    <link rel='stylesheet' href='/css/bootstrap.min.css' />
    <link rel="stylesheet" href="/css/style.css" />
  </head>


  <body>
    <div class="container">
    	<div class="row">
        Hello INSERT NAME
        <span>Logout</span>
    </div>

      <!-- Button trigger modal -->
    <button id="newModalButton" type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
      +
    </button>

    <!-- Modal -->
   
      <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div id="modalHead" class="modal-header">
              <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            </div>
              <div class="modal-body">
                <input id="deal_name" placeholder="Enter (deal) name?" type="text" class="form-control">
                <input id="deal_description" placeholder="Enter (deal) description?" type="text" class="form-control">
              </div>
              <div class="modal-footer">
                <div class="col-sm-7">
                </div>
                <div class="col-sm-2">
                  <button type="button" class="btn" data-dismiss="modal">Close</button>
                </div>
                <div class="col-sm-2">
                  <button type="button" class="btn btn-primary">Save changes</button>
                </div>
              </div>
          </div>
        </div>
      </div>

      <% for(var a = 0; a < 5 /*drops.length*/; a++) { %>
      <div class="row trade">
        <div class="col-md-4 trade-description">
          <h1>INSERT NAME</h1>
          <p>INSERT GEOCACHE TAG</p>
          <p>INSERT DESCRIPTION</p>
        </div>
        <div class="col-md-4 trade-map">
          <img src="/img/map.png" width="100%">
        </div>
        <div class="col-md-4 trade-image">
          <img src="http://i.imgur.com/hfGQ3r2.jpg" width="100%" height="100%">
        </div>
      </div>
      <% } %>





    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script type="text/javascript" src="/js/bootstrap.js"</script>
    <script src="/js/page.js"></script>
  </body>
</html>
